uniform_float opacity {
    default = 0.5;
    step = 0.05;
    min = 0.0;
    max = 1.0;
    display_name = "Opacity";
    static = false;
}

fragment black() {
    omw_In vec2 omw_TexCoord;

    void main()
    {
        omw_FragColor = (1.0-opacity) * texture(omw_SamplerLastShader, omw_TexCoord);
    }
}

technique {
    description = "Screen goes black";
    version = "1.0";
    author = "Max Yai";
    passes =  black;
    dynamic = true;
    flags = hidden;
}
